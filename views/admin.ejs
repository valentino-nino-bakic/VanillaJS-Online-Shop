<!DOCTYPE html>
<html lang="en">
    <head>

        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Yorkshire Ecommerce</title>
        <link href="https://fonts.googleapis.com/css2?family=Poppins&display=swap" rel="stylesheet">
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">
        <link rel="stylesheet" href="/css/style.css">
        <link rel="stylesheet" href="/css/media_queries.css">

    </head>
    <body>
        
        <!-- header -->
        <%- include('partials/admin/headerAdmin') %>

        <div class="sidebar">
            <a href="/admin/users">Users</a>
            <a href="/admin/products">Products</a>
            <a href="/admin/orders">Orders</a>
            <a href="/admin/messages">Messages</a>
            <a href="/admin/settings">Settings</a>
        </div>


        <div class="admin-header-adjustment-helper"></div>




        <!-- main -->
        <main class="admin-main">
            <h2 class="yorkshire-admin-panel-h2">Yorkshire Admin Panel</h2>
            <div class="admin-page-content-container">
                <% if (section === 'users') { %>
                    <%- include('partials/admin/users') %>
                <% } else if (section === 'products') { %>
                    <%- include('partials/admin/products') %>
                <% } else if (section === 'orders') { %>
                    <%- include('partials/admin/orders') %>
                <% } else if (section === 'messages') { %>
                    <%- include('partials/admin/messages') %>
                <% } else if (section === 'settings') { %>
                    <%- include('partials/admin/settings') %>
                <% } %>
            </div>
            <div class="bigger-screen-required">
                <p>Sorry, you must use either a PC, laptop or tablet to manage the admin panel</p>
            </div>
        </main>




        <!-- footer -->
        <%- include('partials/shared/footer') %>
        
        







        <!-- scroll to top button -->
        <%- include('partials/shared/scrollToTopButton') %>





        <script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.12.2/gsap.min.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.12.2/ScrollTrigger.min.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/jwt-decode@3.0.0/build/jwt-decode.min.js"></script>
        <!-- <script src="js/gsap/gsap_index.js"></script> -->
        <script src="<%= process.env.NODE_ENV === 'production' ? '/js/admin.bundle.js' : '/js/pages/admin.js' %>" type="module"></script>
    </body>
</html>
